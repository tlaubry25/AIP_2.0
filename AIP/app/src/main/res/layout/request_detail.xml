<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_beneficiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/request_beneficiary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_beneficiary_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_beneficiary"
        app:layout_constraintTop_toTopOf="@+id/tv_beneficiary"
        />

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/margin_detail"
        android:text="@string/request_center"
        app:layout_constraintStart_toStartOf="@+id/tv_beneficiary"
        app:layout_constraintTop_toBottomOf="@+id/tv_beneficiary" />

    <TextView
        android:id="@+id/tv_center_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_center"
        app:layout_constraintTop_toTopOf="@+id/tv_center"
        />

    <TextView
        android:id="@+id/tv_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/margin_detail"
        android:text="@string/request_site"
        app:layout_constraintStart_toStartOf="@+id/tv_center"
        app:layout_constraintTop_toBottomOf="@+id/tv_center" />

    <TextView
        android:id="@+id/tv_site_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_site"
        app:layout_constraintTop_toTopOf="@+id/tv_site"
        />

    <TextView
        android:id="@+id/tv_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/margin_detail"
        android:text="@string/request_project"
        app:layout_constraintStart_toStartOf="@+id/tv_site"
        app:layout_constraintTop_toBottomOf="@+id/tv_site" />

    <TextView
        android:id="@+id/tv_project_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_project"
        app:layout_constraintTop_toTopOf="@+id/tv_project"
        />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/margin_detail"
        android:text="@string/request_date"
        app:layout_constraintStart_toStartOf="@+id/tv_project"
        app:layout_constraintTop_toBottomOf="@+id/tv_project" />

    <TextView
        android:id="@+id/tv_date_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_date"
        app:layout_constraintTop_toTopOf="@+id/tv_date"
        />

    <TextView
        android:id="@+id/tv_supplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/margin_detail"
        android:text="@string/request_supplier"
        app:layout_constraintStart_toStartOf="@+id/tv_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_date" />

    <TextView
        android:id="@+id/tv_supplier_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_supplier"
        app:layout_constraintTop_toTopOf="@+id/tv_supplier"
        />

    <TextView
        android:id="@+id/tv_amount_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/margin_detail"
        android:text="@string/request_amount_local"
        app:layout_constraintStart_toStartOf="@+id/tv_supplier"
        app:layout_constraintTop_toBottomOf="@+id/tv_supplier" />


    <TextView
        android:id="@+id/tv_amount_local_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_amount_local"
        />

    <TextView
        android:id="@+id/tv_amount_bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/margin_detail"
        android:text="@string/request_amount_bought"
        app:layout_constraintStart_toStartOf="@+id/tv_amount_local"
        app:layout_constraintTop_toBottomOf="@+id/tv_amount_local" />

    <TextView
        android:id="@+id/tv_amount_bought_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_amount_bought"
        />

    <TextView
        android:id="@+id/tv_budget_estimated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/margin_detail"
        android:text="@string/request_budget_estimated"
        app:layout_constraintStart_toStartOf="@+id/tv_amount_bought"
        app:layout_constraintTop_toBottomOf="@+id/tv_amount_bought" />

    <TextView
        android:id="@+id/tv_budget_estimated_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_budget_estimated"
        />

    <TextView
        android:id="@+id/tv_budget_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/margin_detail"
        android:text="@string/request_budget_used"
        app:layout_constraintStart_toStartOf="@+id/tv_budget_estimated"
        app:layout_constraintTop_toBottomOf="@+id/tv_budget_estimated" />

    <TextView
        android:id="@+id/tv_budget_used_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_budget_used" />

    <TextView
        android:id="@+id/tv_section_attachement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="70dp"
        android:text="@string/section_attachement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_budget_used" />

    <TextView
        android:id="@+id/tv_section_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginVertical="15dp"
        android:text="@string/section_notes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_section_attachement" />

    <TextView
        android:id="@+id/tv_section_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginVertical="15dp"
        android:text="@string/section_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_section_notes" />

    <include
        layout="@layout/custom_bottom_bar"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>